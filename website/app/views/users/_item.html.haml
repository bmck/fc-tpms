- # $Id$
- # $(c)$

- actions = []
- if can? :view_audit, object
  - actions << {name: :custom,  icon: "glyphicon glyphicon-book", title: 'View User History', url: view_audit_user_path(object)}
- if can? :edit, object
  - actions << {name: :edit,    url: edit_user_path(object)}
- if can? :destroy, object
  - actions << {name: :destroy, url: user_path(object), confirmation: "Are you sure you want to delete this user?"}

%td= object.first_last
%td= object.email
%td= object.company_name
%td= object.role
%td.actions= smart_listing_item_actions [ *actions ]