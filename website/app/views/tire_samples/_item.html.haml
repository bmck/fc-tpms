- # $(c)$

- actions = []
- if can? :view_audit, object
  - actions << {name: :custom,  icon: "glyphicon glyphicon-book", title: 'View Tire Sample History', url: view_audit_tire_sample_path(object)}
- if can? :edit, object
  - actions << {name: :edit,    url: edit_tire_sample_path(object)}
- if can? :destroy, object
  - actions << {name: :destroy, url: tire_sample_path(object), confirmation: "Are you sure you want to delete this tire sample?"}

%td= object.tire_name
%td= object.receiver_name
%td= object.psi.to_f
%td= object.tempc.try(:to_f)
%td= object.sample_time.localtime
%td.actions= smart_listing_item_actions [ *actions ]