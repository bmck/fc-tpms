- # $Id$
- # $(c)$

= link_to url, :class => container_classes, :data => {:attr => attribute}, :remote => true do
  = title
  - if order
    %span{:class => "#{order == "asc" ? smart_listing_config.classes(:icon_sort_up) : smart_listing_config.classes(:icon_sort_down)}"}
  - else
    %span{:class => "#{smart_listing_config.classes(:icon_sort_none)}"}
