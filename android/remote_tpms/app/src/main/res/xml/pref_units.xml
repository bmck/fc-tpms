<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceScreen
        android:key="user_creds_screen"
        android:title="@string/user_creds">

        <ListPreference
            android:entries="@array/tempOptionsArray"
            android:entryValues="@array/tempOptionsArray"
            android:key="units_temp"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_presentation_temp" />
        <ListPreference
            android:entries="@array/pressureOptionsArray"
            android:entryValues="@array/pressureOptionsArray"
            android:key="units_pressure"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_presentation_pressure" />
        <CheckBoxPreference
            android:key="detailed_messages"
            android:title="@string/pref_presentation_messages"
            android:summary="@string/pref_presentation_messages_summary"
            android:defaultValue="false" />

    </PreferenceScreen>
</PreferenceScreen>