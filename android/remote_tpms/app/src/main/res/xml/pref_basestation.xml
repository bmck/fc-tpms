<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:key="basestation_local_remote"
        android:title="@string/pref_basestation_local_remote"
        android:summary="@string/pref_basestation_local_remote_summary"
        android:defaultValue=""
        android:entries="@array/localRemoteArray"
        android:entryValues="@array/localRemoteArray"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />
    <EditTextPreference
        android:key="basestation_remote_hostname"
        android:title="@string/pref_basestation_remote_hostname"
        android:summary="@string/pref_basestation_remote_hostname_summary"
        android:defaultValue=""
        android:selectAllOnFocus="true"
        android:inputType="text"
        android:capitalize="none"
        android:singleLine="true"
        android:maxLines="1" />
    <ListPreference
        android:key="basestation_secssent"
        android:title="@string/pref_basestation_secssent"
        android:summary="@string/pref_basestation_secssent_summary"
        android:defaultValue="1.0"
        android:entries="@array/secssendArray"
        android:entryValues="@array/secssendArray"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />
</PreferenceScreen>