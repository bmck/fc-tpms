- actions = []
- if can? :view_audit, object
  - actions << {name: :custom,  icon: "glyphicon glyphicon-book", title: 'View Truck History', url: view_audit_truck_path(object)}
- if can? :edit, object
  - actions << {name: :edit,    url: edit_truck_path(object)}
- if can? :destroy, object
  - actions << {name: :destroy, url: truck_path(object), confirmation: "Are you sure you want to delete this truck?"}

%td= object.company_name
%td= object.name
%td.actions= smart_listing_item_actions [ *actions ]