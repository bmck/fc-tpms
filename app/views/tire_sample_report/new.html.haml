%h2 Tire Sample Report

= form_for @object, url: tire_sample_report_index_path, html: {class: "form-horizontal"} do |f|
  %table.table
    %tr
      %td
        .field
          = f.label :tires
          %br/
          = f.collection_select :sensor_ids, @sensors, :id, :tire_name, {include_blank: 'Any Tire', selected: nil}, {:multiple => true, autofocus: true, :class => "col-md-10"}
      %td
        .field
          = f.label :receivers
          %br/
          = f.collection_select :receiver_ids, @receivers, :id, :name, {include_blank: 'Any Receiver', selected: nil}, {:multiple => true, autofocus: true, :class => "col-md-8"}
      %td
        .field
          = f.label :start_date
          %br/
          = f.date_select :start_service, :autofocus => true
        %p/
        .field
          = f.label :end_date
          %br/
          = f.date_select :end_service, :autofocus => true

  = f.submit "Submit", class: "btn btn-primary"
