- # $Id$
- # $(c)$

%ul.nav.navbar-nav
  - if user_signed_in?
    %li.dropdown
      %a.dropdown-toggle{href:"#", "data-toggle" => "dropdown"}
        %i.fa.fa-bank
        Company Info
        %i.fa.fa-fw.fa-caret-down

      %ul.dropdown-menu
        - if can? :index, :companies
          %li
            %a{ href: companies_path }
              %i.fa.fa-phone
              Company Contacts
        - if can? :index, :tires
          %li
            %a{ href: tires_path }
              %i.fa.fa-circle-o
              Tires
        - if can? :index, :trucks
          %li
            %a{ href: trucks_path }
              %i.fa.fa-car
              Trucks
        - if can? :index, :trailers
          %li
            %a{ href: trailers_path }
              %i.fa.fa-truck
              Trailers
        - if can? :index, :storages
          %li
            %a{ href: storages_path }
              %i.fa.fa-building-o
              Storage Facilities

    - if can? :index, :sensors
      %li
        %a{ href: sensors_path }
          %i.fa.fa-sign-out
          Sensors
    - if can? :index, :receivers
      %li
        %a{ href: receivers_path }
          %i.fa.fa-sign-in
          Receivers
    - if can? :index, :tire_types
      %li
        %a{ href: tire_types_path }
          %i.fa.fa-info-circle
          Tire Types
    - if can? :index, :tire_samples
      %li.dropdown
        %a.dropdown-toggle{ href:"#", "data-toggle" => "dropdown"}
          %i.fa.fa-eyedropper
          Tire Samples
          %i.fa.fa-fw.fa-caret-down

        %ul.dropdown-menu
          - if can? :index, :tire_samples
            %li
              %a{ href: tire_samples_path }
                %i.fa.fa-database
                View/Edit
          - if can? :index, :tire_sample_report
            %li
              %a{ href: new_tire_sample_report_path }
                %i.fa.fa-area-chart
                Chart

    %li.divider

    %li.dropdown-header
      %i.fa.fa-user.fa-fw
      = "Logged in as #{current_user.first_last}"

    %li
      %a{href: edit_user_registration_path}
        %i.fa.fa-user.fa-fw
        Edit User Profile

    - if can? :index, :user
      %li
        %a{ href: users_path }
          %i.fa.fa-users
          View/Edit Users

    %li.divider

    %li
      %a{href: destroy_user_session_path, "data-method" => 'delete'}
        %i.fa.fa-sign-out.fa-fw
        Logout


  - else
    %li
      %a{ href: new_user_session_path }
        %i.fa.fa-sign-in
        Sign in
    %li
      %a{ href: new_user_registration_path }
        %i.fa.fa-user-plus
        Sign up
