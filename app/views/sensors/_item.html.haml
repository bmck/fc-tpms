- # $(c)$

- actions = []
- if can? :view_audit, object
  - actions << {name: :custom,  icon: "glyphicon glyphicon-book", title: 'View Sensor History', url: view_audit_sensor_path(object)}
- if can? :edit, object
  - actions << {name: :edit,    url: edit_sensor_path(object)}
- if can? :destroy, object
  - actions << {name: :destroy, url: sensor_path(object), confirmation: "Are you sure you want to delete this sensor?"}

%td= object.name
%td= object.sensor_type
%td.actions= smart_listing_item_actions [ *actions ]