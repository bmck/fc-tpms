- # $Id$
- # $(c)$

- unless smart_listing.empty?
  %table.table.table-striped
    %thead
      %tr
        %th= smart_listing.sortable "Tire Serial", :serial
        %th= smart_listing.sortable "Sensor Serial", :sensor_serial
        %th= smart_listing.sortable "Tire Type", :tire_type
        %th= smart_listing.sortable "Company", :company_name
        %th
    %tbody
      - smart_listing.collection.each do |tire|
        %tr.editable{data: {id: tire.id}}
          = smart_listing.render object: tire, partial: 'tires/item', locals: {object: tire}
    %tfoot
      = smart_listing.item_new colspan: 5, link: new_tire_path

  -# Render nice pagination links fitted for Bootstrap 3 by default
  .text-center
    = smart_listing.paginate
    = smart_listing.pagination_per_page_links

- else
  %p
  %table.table
    = smart_listing.item_new colspan: 1, link: new_tire_path
