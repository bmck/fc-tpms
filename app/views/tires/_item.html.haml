- # $Id$
- # $(c)$

- actions = []
- if can? :edit, object
  - actions << {name: :edit,    url: edit_tire_path(object)}
- if can? :destroy, object
  - actions << {name: :destroy, url: tire_path(object), confirmation: "Are you sure you want to delete this tire?"}

%td= object.serial
%td= object.sensor_serial
%td= object.tire_type_name
%td= object.owning_company_name
%td= object.using_company_name
%td= object.location_notation
%td.actions= smart_listing_item_actions [ *actions ]