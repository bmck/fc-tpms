%h1 Companies
= form_for_filterrific @filterrific do |f|
  %div
    Search
    = f.text_field(                                |
        :search_query,                             |
        class: 'filterrific-periodically-observed' |
      )                                            |
  %div
    Registered after
    \#{f.text_field(:with_start_service_gte, class: 'js-datepicker')}
  %div
    = link_to(                 |
        'Reset filters',       |
        reset_filterrific_url, |
      )                        |
  = render_filterrific_spinner
= render(                              |
    partial: 'companies/list',         |
    locals: { companies: @companies }  |
  )                                    |
